{
  "compilerOptions": {
    "lib": ["ESNEXT", "dom"],
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    // needed for import.meta.url to work with TypeScript
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node"
  }
}
